{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "noEmitOnError": true,
    "sourceMap": false,
    "types": [
      "node"
     ],
     "typeRoots": [
      "../node_modules/@types"
     ],
     "declaration": true,
     "outDir": "./lib"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "src/**/commands/*"
  ]
}
